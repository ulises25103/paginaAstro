<section id="contact" class="py-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-8">Cont√°ctanos</h2>
      <form action="#" method="POST" class="max-w-lg mx-auto">
        <div class="mb-4">
          <label for="name" class="block text-lg font-semibold">Nombre</label>
          <input type="text" id="name" name="name" class="w-full border border-gray-300 p-2 rounded" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-lg font-semibold">Email</label>
          <input type="email" id="email" name="email" class="w-full border border-gray-300 p-2 rounded" required>
        </div>
        <div class="mb-4">
          <label for="message" class="block text-lg font-semibold">Mensaje</label>
          <textarea id="message" name="message" class="w-full border border-gray-300 p-2 rounded" rows="4" required></textarea>
        </div>
        <button type="submit" class="bg-[#005e7c] text-white py-2 px-4 rounded">Enviar</button>
      </form>
    </div>
  </section>
  